@model List<UserViewModel>



    <div class="container">
        <div class="row">

            @foreach (var user in Model)
            {
                <div class="d-flex col-md-4 flex-wrap">
                    <div class="col-md-12  my-2 mycard">
                        <div class="first-layer text-light">
                            <p>Cover photo goes here</p>
                        </div>
                        <div class="second-layer">
                        </div>
                        <div class="third-layer">
                            <h3 class="text-light">@user.UserName</h3>
                            <h6 class="mt-3 text-light">@user.MinstrelType</h6>
                            <p class="text-light">@user.Description</p>

                        </div>

                        <a class=" mybutton" asp-action="Detail" asp-controller="user" asp-route-id="@user.Id ">View</a>
                        
                    </div>
                </div>
            }






        </div>    
    </div>